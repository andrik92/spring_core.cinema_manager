<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<util:set id="auditoriums">
		<bean class="ua.epam.spring.hometask.domain.Auditorium">
			<constructor-arg>
				<util:properties location="classpath:auditoriums/hall1.properties"/>
			</constructor-arg>
		</bean>
		<bean class="ua.epam.spring.hometask.domain.Auditorium">
			<constructor-arg>
				<util:properties location="classpath:auditoriums/hall2.properties"/>
			</constructor-arg>
		</bean>
	</util:set>

</beans>